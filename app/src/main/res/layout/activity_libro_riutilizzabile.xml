<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AreeBiblioteca.Libro_Riutilizzabile"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/nomeLibro"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="25sp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/white"
        android:background="@color/rosso_bordeaux"
        android:visibility="visible">
    </TextView>

    <View
        android:id="@+id/sepPsTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nomeLibroTV"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@color/english_violet"
            android:textColor="@color/white"
            android:text="NOME"
            android:textAlignment="center"
            android:textSize="20sp">
        </TextView>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/black" />

        <TextView
            android:id="@+id/TestoNome"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="20sp">
        </TextView>

    </LinearLayout>

    <View
        android:id="@+id/sep1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Autore"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@color/english_violet"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:text="AUTORE/I"
            android:textSize="20sp">
        </TextView>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/black" />

        <TextView
            android:id="@+id/TestoAutore"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="20sp">
        </TextView>
    </LinearLayout>

    <View
        android:id="@+id/sep2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/settore"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@color/english_violet"
            android:textColor="@color/white"
            android:text="SETTORE"
            android:textAlignment="center"
            android:textSize="20sp">
        </TextView>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/black" />

        <TextView
            android:id="@+id/TestoSettore"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="20sp">
        </TextView>
    </LinearLayout>

    <View
        android:id="@+id/sep3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:visibility="visible"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Sinossi"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@color/english_violet"
            android:textColor="@color/white"
            android:text="CONTENUTI"
            android:textAlignment="center"
            android:textSize="20sp">
        </TextView>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/black" />

        <TextView
            android:id="@+id/TestoSinossi"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:textSize="20sp">
        </TextView>
    </LinearLayout>

    <View
        android:id="@+id/sep5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:visibility="visible"/>

    <Button
        android:id="@+id/bottoneRichiesta"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Prendi in Prestito"
        android:visibility="visible"
        android:textSize="20sp"
        android:backgroundTint="@color/verde_opaco"
        android:layout_gravity="center"
        app:cornerRadius="8dp"
        android:textColor="@color/white"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_marginTop="70dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone" />



</LinearLayout>