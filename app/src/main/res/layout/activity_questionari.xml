<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Questionari"
    android:orientation="vertical"
    android:background="@color/white">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="QUESTIONARI"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="25sp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/white"
        android:background="@color/rosso_bordeaux"
        android:visibility="visible"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ti è piaciuta l'applicazione?"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textSize="22sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/gunmetal"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Si, molto"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Si, ma si può migliorare"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Potevate impegnarvi di più"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No, non mi ha soddisfatto"
            android:textSize="18sp"
            android:textColor="@color/black"/>
    </RadioGroup>

    <EditText
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:inputType="text"
        android:layout_margin="10dp"
        android:hint="Lascia un feedback!"
        android:textColorHint="@color/hint_medium_gray"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/invioFeedback"
        android:layout_marginTop="20dp"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="Invia!"
        android:visibility="visible"
        android:backgroundTint="@color/blue_ncs"
        android:layout_gravity="center"
        app:cornerRadius="8dp"
        android:textColor="@color/white"/>


</LinearLayout>