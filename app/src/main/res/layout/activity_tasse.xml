<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tasse"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="SITUAZIONE TASSE"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="25sp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/white"
        android:background="@color/rosso_bordeaux"
        android:visibility="visible" />


    <TextView
        android:id="@+id/infor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/black"
        android:layout_margin="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/black" />


    <LinearLayout
        android:id="@+id/rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/primarataTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-condensed"
                android:textSize="18sp"
                android:visibility="gone"
                android:text="lorem"
                android:textColor="@color/black"/>

            <Button
            android:id="@+id/bottonePagamento1"
            android:layout_marginTop="20dp"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="Paga"
            android:visibility="gone"
            android:backgroundTint="@color/verde_opaco"
            android:layout_gravity="center"
            app:cornerRadius="8dp" android:textColor="@color/white"/>

        </LinearLayout>

        <View
            android:id="@+id/sep1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/secondaTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="sans-serif-condensed"
                android:visibility="gone"
                android:layout_margin="10dp"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/bottonePagamento2"
                android:layout_marginTop="20dp"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:text="Paga"
                android:visibility="gone"
                android:backgroundTint="@color/verde_opaco"
                android:layout_gravity="center"
                app:cornerRadius="8dp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <View
            android:id="@+id/sep2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <TextView
                android:id="@+id/terzarataTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="sans-serif-condensed"
                android:visibility="gone"
                android:layout_margin="10dp"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/bottonePagamento3"
                android:layout_marginTop="20dp"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:text="Paga"
                android:visibility="gone"
                android:backgroundTint="@color/verde_opaco"
                android:layout_gravity="center"
                app:cornerRadius="8dp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <View
            android:id="@+id/sep3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <TextView
                android:id="@+id/quartarataTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="sans-serif-condensed"
                android:visibility="gone"
                android:layout_margin="10dp"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/bottonePagamento4"
                android:layout_marginTop="20dp"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:text="Paga"
                android:visibility="gone"
                android:backgroundTint="@color/verde_opaco"
                android:layout_gravity="center"
                app:cornerRadius="8dp"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progress="100"
        android:indeterminate="true"
        android:visibility="gone"
        android:progressTint="@color/black"
        android:indeterminateDuration="10"/>


</LinearLayout>