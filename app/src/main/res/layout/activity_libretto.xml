<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Libretto"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="LIBRETTO"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="25sp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/white"
        android:background="@color/rosso_bordeaux"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/infoLibretto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-condensed"
        app:autoSizeTextType="uniform"
        android:visibility="visible"/>


    <Button
        android:id="@+id/bottoneLista"
        android:layout_marginTop="20dp"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="Lista degli esami"
        android:visibility="visible"
        android:backgroundTint="@color/verde_opaco"
        android:layout_gravity="center"
        app:cornerRadius="8dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/intEsami"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Lista Esami"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="25sp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/white"
        android:background="@color/rosso_bordeaux"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white" />


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_marginTop="70dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lista"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:visibility="gone"/>



</LinearLayout>