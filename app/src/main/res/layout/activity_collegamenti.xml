<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Collegamenti"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/rosso_bordeaux"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="COLLEGAMENTI"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/siti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/sitoUnical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-condensed"
                android:textSize="18sp"
                android:visibility="visible"
                android:text="SITO D'ATENEO"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/bottoneSito"
                android:layout_marginTop="20dp"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:text="Clicca qui!"
                android:visibility="visible"
                android:backgroundTint="@color/rosso_bordeaux"
                android:layout_gravity="center"
                app:cornerRadius="8dp" android:textColor="@color/white"/>

        </LinearLayout>

        <View
            android:id="@+id/sep1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/black"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/Soscr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="sans-serif-condensed"
                android:visibility="visible"
                android:text="PORTALE SOSCR"
                android:textAlignment="center"

                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/bottonesoscr"
                android:layout_marginTop="20dp"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:text="Clicca qui!"
                android:visibility="visible"
                android:backgroundTint="@color/rosso_bordeaux"
                android:layout_gravity="center"
                app:cornerRadius="8dp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <View
            android:id="@+id/sep2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/black"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <TextView
                android:id="@+id/insta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="sans-serif-condensed"
                android:visibility="visible"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:text="PAGINA INSTAGRAM"
                android:layout_gravity="center"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/bottoneinsta"
                android:layout_marginTop="20dp"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:text="Clicca qui!"
                android:visibility="visible"
                android:backgroundTint="@color/rosso_bordeaux"
                android:layout_gravity="center"
                app:cornerRadius="8dp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <View
            android:id="@+id/sep3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/black"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <TextView
                android:id="@+id/twitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="sans-serif-condensed"
                android:visibility="visible"
                android:text="PROFILO X"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/bottoneTwitter"
                android:layout_marginTop="20dp"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:text="Clicca qui!"
                android:visibility="visible"
                android:backgroundTint="@color/rosso_bordeaux"
                android:layout_gravity="center"
                app:cornerRadius="8dp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <View
            android:id="@+id/sep4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/black"
            android:visibility="visible"/>

    </LinearLayout>

</LinearLayout>
