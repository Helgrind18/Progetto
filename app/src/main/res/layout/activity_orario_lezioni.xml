<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrarioLezioni"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="ORARIO LEZIONI"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="25sp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/white"
        android:background="@color/rosso_bordeaux"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/sceltaGiorno"
        android:text="CLICCA PER SELEZIONARE IL GIORNO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/black"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/listaGiorni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:visibility="visible"/>


        <TextView
            android:id="@+id/clickLunedi"
            android:text="LUNEDI'"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="22sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:visibility="visible"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/clickMartedi"
            android:text="MARTEDI'"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="22sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:visibility="visible"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/clickMercoledi"
            android:text="MERCOLEDI'"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:textSize="22sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:visibility="visible"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/clickGiovedÃ¬"
            android:text="GIOVEDI'"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:textSize="22sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:visibility="visible"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/clickVenerdi"
            android:text="VENERDI'"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:textSize="22sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:visibility="visible"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:visibility="visible"/>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>





    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listaLezioni"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent"/>



</LinearLayout>