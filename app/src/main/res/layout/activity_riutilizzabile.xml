<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityRiutilizzabile"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/nomeCorso"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="25sp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/white"
        android:background="@color/rosso_bordeaux"
        android:visibility="visible">
    </TextView>

    <View
        android:id="@+id/sepPsTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Lingua"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@color/rosso_bordeaux"
            android:textColor="@color/white"
            android:text="LINGUA"
            android:textAlignment="center"
            android:textSize="20sp">
        </TextView>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/black" />

        <TextView
            android:id="@+id/TestoLingua"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="Italiano"
            android:textAlignment="center"
            android:textSize="20sp">
        </TextView>

    </LinearLayout>

    <View
        android:id="@+id/sep1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Anno"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@color/rosso_bordeaux"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:text="ANNO DI EROGAZIONE"
            android:textSize="20sp">
        </TextView>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/black" />

        <TextView
            android:id="@+id/TestoAnno"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="20sp">
        </TextView>
    </LinearLayout>

    <View
        android:id="@+id/sep2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/semestre"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@color/rosso_bordeaux"
            android:textColor="@color/white"
            android:text="SEMESTRE"
            android:textAlignment="center"
            android:textSize="20sp">
        </TextView>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/black" />

        <TextView
            android:id="@+id/TestoSemestre"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="20sp">
        </TextView>
    </LinearLayout>

    <View
        android:id="@+id/sep3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Cfu"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@color/rosso_bordeaux"
            android:textColor="@color/white"
            android:text="CFU"
            android:textAlignment="center"
            android:textSize="20sp">
        </TextView>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/black" />

        <TextView
            android:id="@+id/TestoCFU"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="20sp">
        </TextView>
    </LinearLayout>

    <View
        android:id="@+id/sep4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Descrizione"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@color/rosso_bordeaux"
            android:textColor="@color/white"
            android:text="CONTENUTI"
            android:textAlignment="center"
            android:textSize="20sp">
        </TextView>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/black" />

        <TextView
            android:id="@+id/TestoDesc"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="20sp">
        </TextView>
    </LinearLayout>

    <View
        android:id="@+id/sep5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:visibility="visible"/>





</LinearLayout>